<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE facelet-taglib PUBLIC
"-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
"http://java.sun.com/dtd/facelet-taglib_1_0.dtd">
 
<facelet-taglib>
    <namespace>http://sgps/jsf-custom-components/</namespace>
    
    <tag>
        <tag-name>uniqueValidator</tag-name>     
        <validator>
            <validator-id>uniqueValidator</validator-id>                        
        </validator>
        
        <attribute>
            <name>entity</name>
            <required>true</required>
            <description>La entidad sobre la que se va a validad un atributo. No debe ser nula.</description>
            <type>java.lang.Object</type>
        </attribute>
        
        <attribute>
            <name>property</name>
            <required>true</required>
            <description>La propiedad a validad</description>
            <type>java.lang.String</type>
        </attribute>
        
        <attribute>
            <name>message</name>
            <required>false</required>            
            <description>Un mensaje de validación personalizado. Si no se indica se usa un mensaje genérico</description>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    
</facelet-taglib>